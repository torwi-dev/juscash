{
  "routes": [
    {
      "route": "/assets/*",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "route": "*.js",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "route": "*.mjs",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "route": "*.css",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "*.js", "*.css", "*.png", "*.jpg", "*.gif", "*.ico", "*.svg"]
  },
  "mimeTypes": {
    ".js": "application/javascript",
    ".mjs": "application/javascript",
    ".css": "text/css"
  }
}
